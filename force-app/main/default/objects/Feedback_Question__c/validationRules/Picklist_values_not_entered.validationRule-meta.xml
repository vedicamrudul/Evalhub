<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Picklist_values_not_entered</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Input_Type__c, &quot;Picklist&quot;) &amp;&amp; ISBLANK(Picklist_Values__c)</errorConditionFormula>
    <errorDisplayField>Picklist_Values__c</errorDisplayField>
    <errorMessage>Picklist values must be provided when Input Type is set to Picklist</errorMessage>
</ValidationRule>
